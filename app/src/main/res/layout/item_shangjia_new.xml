<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical" android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_shangjia_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_shangjia_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/alertcolor_bg_whight"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/item_shangjia_ed_place"
            android:layout_below="@id/item_shangjia_tv_status"
            android:layout_width="wrap_content"
            android:hint="上架位置"
            android:layout_height="wrap_content"></EditText>
        <Button
            android:id="@+id/item_shangjia_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="上架"/>
    </RelativeLayout>
</LinearLayout>