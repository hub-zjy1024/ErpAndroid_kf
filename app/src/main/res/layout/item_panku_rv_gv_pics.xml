<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_panku_rv_gv_iv"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/image_preview_height_w2"
            android:layout_height="@dimen/image_preview_height_w2"
            android:layout_margin="2dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/item_panku_rv_gv_tv_errmsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_alert_red"
            android:layout_alignParentBottom="true">
        </TextView>
    </RelativeLayout>

</LinearLayout>
