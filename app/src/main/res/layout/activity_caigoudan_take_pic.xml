<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_caigoudan_take_pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.b1b.js.erpandroid_kf.CaigouActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/lrPadding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/activity_caigoudan_take_pic_ed_pid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/yundan_form_horizontal"
              style="@style/zjy_metiarial_ed.common"
                android:inputType="number"
                android:layout_weight="1"
                android:hint="单据号"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/activity_caigoudan_take_pic_ed_partno"
                android:layout_width="0dp"
                style="@style/zjy_metiarial_ed.common"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:hint="型号"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <Button
                android:id="@+id/activity_caigoudan_take_pic_btn_search"
                style="@style/zjy_button_light"
                android:text="搜索"/>

            <Button
                android:id="@+id/activity_caigoudan_take_pic_btn_saoma"
                style="@style/zjy_button_light"
                android:layout_marginLeft="20dp"
                android:text="扫码"/>
        </LinearLayout>



        <ListView
            android:id="@+id/activity_caigoudan_take_pic_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>


</LinearLayout>
