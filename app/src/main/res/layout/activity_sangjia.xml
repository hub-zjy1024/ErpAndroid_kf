<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.b1b.js.erpandroid_kf.RukuTagPrintAcitivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/lrPadding"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/shangjia_marginTop"
            >

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/shangjia_activity_ed_pid"
                android:layout_width="@dimen/ruku_tag_detailID"
                android:layout_height="wrap_content"
                android:hint="输入明细号"
                android:inputType="number"
                style="@style/zjy_metiarial_ed.common"/>


            <Button
                android:id="@+id/shangjia_activity_btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/panku_detail_min_margin_left"
                android:text="搜索"/>

            <Button
                android:id="@+id/shangjia_activity_btn_scancode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/panku_detail_min_margin_left"
                android:text="扫码"/>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_shangjia_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>



</LinearLayout>
