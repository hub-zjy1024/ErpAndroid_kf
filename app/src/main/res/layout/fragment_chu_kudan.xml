<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.b1b.js.erpandroid_kf.ChuKudanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/frag_chukudan_pid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入单据号"
            android:inputType="number"/>

        <EditText
            android:id="@+id/frag_chukudan_GoodNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入型号"
            android:maxLines="1"
            />


        <Button
            android:id="@+id/frag_chukudan_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            style="@style/zjy_button_nomarl_alpha100"
            android:drawableLeft="@mipmap/map_ic_global_search_textbox_normal"
            android:text="搜索"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioGroup
            android:id="@+id/chukudan_rgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/chukudan_rbn_halfamonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="半月内"/>

            <RadioButton
                android:id="@+id/chukudan_rbn_amonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一月内"/>

            <RadioButton
                android:id="@+id/chukudan_rbn_halfayear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="半年内"/>
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView

            android:id="@+id/chukudan_stime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起(点击设置)"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/chukudan_etime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="终(点击设置)"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/chukudan_cleartime"
            style="@style/zjy_button_nomarl_alpha100"
            android:drawableLeft="@drawable/btn_clear"
            android:text="清除时间"/>

    </LinearLayout>

    <ListView
        android:id="@+id/frag_chukudan_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:divider="@drawable/divider"
        android:dividerHeight="1dp"
        />

</LinearLayout>
