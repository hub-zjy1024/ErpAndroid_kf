<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_pic_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_pic_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.b1b.js.erpandroid_kf.myview.ZoomImageView
        android:id="@+id/activity_pic_detail_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_pic_detail_tv"
            android:layout_width="match_parent"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/activity_pic_detail_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_white"
            android:gravity="center">

        </TextView>
    </LinearLayout>


</RelativeLayout>
