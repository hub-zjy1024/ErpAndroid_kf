<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_caigou_detial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.b1b.js.erpandroid_kf.CaigouDetailActivity">

    <TextView
        style="@style/zjy_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="采购详情"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="单据号："/>

        <TextView
            android:id="@+id/activity_caigou_detial_tv_pid"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_caigou_detial_btn_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="生成合同"/>
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/activity_caigou_detial_btn_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看合同"/>
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/activity_caigou_detial_btn_takepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="采购单拍照"/>

    </LinearLayout>


    <TextView
        android:id="@+id/activity_caigou_detial_tv_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="存储路径"
        android:textAllCaps="false"/>

    <!--<GridView-->
        <!--android:id="@+id/activity_caigou_detial_gvpdf"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->

    <com.joanzapata.pdfview.PDFView
        android:id="@+id/activity_caigou_detial_pdfview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
